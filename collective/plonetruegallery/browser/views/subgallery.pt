<div id="subgallery-browse-wrapper" tal:condition="view/show_subgalleries"
    tal:define="categories view/subgallery_categories;">
  <div id="subgallery-search">
    <span>Browse By</span>
    <div id="categories" tal:condition="categories">
      <ul>
        <tal:cat tal:repeat="category categories|nothing">
          <li tal:content="category" />
        </tal:cat>
      </ul>
    </div>
    <span>or</span>
    <form>
      <input name="q" />
      <input type="submit" name="submit" value="Search" />
    </form>
    <button name="showall">Show All</button>
  </div>
  <div id="subgallery-info">
  </div>
  <div id="subgallery-galleries">
    <tal:galleries tal:repeat="gallery view/adapter/subgalleries;">
      <div class="gallery" tal:define="adapted python:view.getAdaptedGallery(gallery.getObject());
                                       image adapted/get_random_image">
        <a tal:attributes="href gallery/getURL">
          <img tal:condition="image" tal:attributes="src image/thumb_url" />
        </a>
        <p tal:content="gallery/Title" />
      </div>
    </tal:galleries>
  </div>
  <div id="subgallery-paging">
  </div>
</div>